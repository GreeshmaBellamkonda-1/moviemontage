{
    "version": 2,
    "name": "movie-review-system",
    "builds": [
      {
        "src": "Server/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "Client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "Client/build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "Server/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/Client/build/$1"
      }
    ]
  }
  